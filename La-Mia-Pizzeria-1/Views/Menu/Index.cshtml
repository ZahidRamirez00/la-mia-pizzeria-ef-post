@model List<Pizza>

@if (Model.Count == 0)
{
    <h3>Non sono presenti pizze a listino, ci scusiamo per il disagio</h3>
}

<main class="container">
    <h1>Il nostro olimpo</h1>
    <table class="table table-hover my-5">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
                <th scope="col">Descrizione</th>
                <th scope="col">Prezzo</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td>@pizza.Id</td>
                    <td><a href="@Url.Action("Details","Menu",new{ID=pizza.Id})">@pizza.Name</a></td>
                    <td><img src="@pizza.Image" class="img-fluid" alt="@pizza.Name" width="300"></td>
                    <td>@pizza.Description</td>
                    <td>@pizza.Prezzo €</td>
                    <td><a class="btn btn-primary" href="@Url.Action("Update","Menu", new{ID=pizza.Id})">Modifica Pizza</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("Delete","Menu", new{ID=pizza.Id})">Elimina Pizza</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="@Url.Action("Create","Menu")">Aggiungi Pizza</a>
</main>