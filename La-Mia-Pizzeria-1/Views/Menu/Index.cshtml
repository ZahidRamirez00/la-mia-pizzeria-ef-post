@model List<Pizza>

@if(Model.Count == 0)
{
    <h3>Non ci sono pizze da Visualizzare!</h3>
}else{

    <div class="container">
        <h1 class="my-3 color-red">Lista delle mie Pizze</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Prezzo</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Pizza pizza in Model)
                {
                    <tr>
                        <td>@pizza.Id</td>
                        <td style="width: 20%">@pizza.Name</td>
                        <td>@pizza.Description</td>
                        <td><img src="~/img/@pizza.Image" class="img-fluid" alt="Pizza @pizza.Name"></td>
                        <td>@pizza.Prezzo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        
}